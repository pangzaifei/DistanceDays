<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:actionBarSize">@dimen/nav_bar_height</item>
    </style>

    <style name="main_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="main_tab_style" parent="main_tab">
        <item name="android:drawablePadding">1.5dp</item>
        <item name="android:textColor">@drawable/footer_text_color</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="main_head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">@color/head_text</item>
        <item name="android:shadowColor">@color/main_head_title_shadow_color</item>
    </style>

    <style name="title_base_button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/title_base_button_text_color</item>
    </style>

</resources>
