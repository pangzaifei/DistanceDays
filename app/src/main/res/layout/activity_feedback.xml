<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/bg_feeddback_edt_shape"
        android:hint="亲爱的用户：
 您好！
 感谢您对我们团队的支持。如果你在正常使用过程中，遇到了问题，或者对产品有任何建议，都可以在这里写下来发送给我们，我们期待您的反馈。  "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:text="0/300"
        android:textColor="#858585"
        android:textSize="13sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_feeddback_edt_shape"
        android:hint="请留下您的邮箱或QQ号"/>

    <Button
        android:id="@+id/btn_commit"
        android:theme="@style/AddEventButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="提交"
        android:textColor="#FFFDFDFF"
        android:textSize="16sp"/>
</LinearLayout>