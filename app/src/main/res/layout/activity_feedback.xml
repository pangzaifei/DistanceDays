<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <EditText
        android:id="@+id/edt_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="13dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/bg_feedback_edt_shape"
        android:gravity="start"
        android:maxLength="300"
        android:hint="@string/string_feedback_context_hint"
        android:textColor="#FF323232"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_feedback_word_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:text="0/300"
        android:textColor="#858585"
        android:textSize="13sp"/>

    <EditText
        android:id="@+id/edt_feedback_contact"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_feedback_edt_shape"
        android:hint="@string/string_feedback_contact"
        android:textColor="#FF323232"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btn_commit"
        android:theme="@style/AddEventButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="提交"
        android:textColor="#FFFDFDFF"
        android:textSize="16sp"/>
</LinearLayout>