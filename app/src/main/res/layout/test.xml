<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/date_card_small_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/date_card_small_height"
        android:layout_marginStart="@dimen/card_padding_left"
        android:layout_marginLeft="@dimen/card_padding_left"
        android:layout_marginTop="@dimen/card_padding_top"
        android:layout_marginEnd="@dimen/card_padding_left"
        android:layout_marginRight="@dimen/card_padding_left"
        android:layout_marginBottom="@dimen/card_padding_top"
        android:clickable="false"
        android:minHeight="@dimen/date_card_small_height"
        app:cardCornerRadius="@dimen/date_card_small_radius"
        app:cardElevation="0.5dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date_card_small_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/card_small_text"
                android:paddingRight="8dp"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/date_card_small_date"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/primary_text_color"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/font_title_big"
                app:autoSizeMinTextSize="16sp"
                app:autoSizeStepGranularity="2sp" />

            <TextView
                android:id="@+id/date_card_small_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/text_margin"
                android:paddingEnd="@dimen/text_margin"
                android:paddingRight="@dimen/text_margin"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/font_days" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>