<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_footer"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/bg_main_tab"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/rg_tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tab_distance_days"
            style="@style/main_tab_style"
            android:checked="true"
            android:drawableTop="@drawable/tab_distance_days_selector"
            android:text="@string/main_tab_distance_days" />

        <RadioButton
            android:id="@+id/tab_history"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/tab_history_selector"
            android:text="@string/main_tab_history" />

        <RadioButton
            android:id="@+id/tab_relax"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/tab_relax_selector"
            android:text="@string/main_tab_relax" />

        <RadioButton
            android:id="@+id/tab_setting"
            style="@style/main_tab_style"
            android:drawableTop="@drawable/tab_setting_selector"
            android:text="@string/main_tab_setting" />
    </RadioGroup>
</LinearLayout>